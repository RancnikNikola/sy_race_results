{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <h3 class="mt-3">Edit Form</h3>
        <div class="col-md-6 offset-md-3">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.fullName )}}
                {{ form_widget(form.fullName, {'attr':{'class':'form-control'}}) }}
            </div>
             <div class="form-group mt-3">
                {{ form_label(form.raceTime )}}
                {{ form_widget(form.raceTime, {'attr':{'class':'border-0'}}) }}
            </div>
            <div class="form-group">
               <button type="submit" class="btn btn-primary btn-block mt-3">Update</button>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}