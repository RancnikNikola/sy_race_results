{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    <div class="row">
        <h3 class="mt-3">Create new Race</h3>
        <div class="col-md-6 offset-md-3">
        {{ form_start(form) }}
            <div class="form-group mt-3">
                {{ form_label(form.races.raceName )}}
                {{ form_widget(form.races.raceName, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group mt-3">
                {{ form_label(form.races.date )}}
                {{ form_widget(form.races.date, {'attr':{'class':'form-control border-0'}}) }}
            </div>
             <div class="form-group mt-3">
                {{ form_label(form.csvFile )}}
                {{ form_widget(form.csvFile, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
               <button type="submit" class="btn btn-primary btn-block mt-3">Create</button>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}